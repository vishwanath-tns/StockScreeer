# Real-Time Yahoo Finance Service - Environment Configuration
# ==============================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
# REDIS_URL=  # Leave empty to use in-memory broker (development mode)

# Database Configuration
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password_here
MYSQL_DB=marketdata

# Serialization Configuration
# Options: json, msgpack, protobuf
# - json: Human-readable, best for development/debugging
# - msgpack: 30-40% smaller/faster, recommended for production
# - protobuf: 50-60% smaller/faster, use for extreme performance needs
SERIALIZATION_FORMAT=json

# Dead Letter Queue Configuration
ENABLE_DLQ=true
DLQ_RETENTION_DAYS=7
DLQ_MAX_RECORDS=100000

# Yahoo Finance Publisher Configuration
YAHOO_BATCH_SIZE=50
YAHOO_RATE_LIMIT=20
YAHOO_POLL_INTERVAL=60

# Connection Pool Configuration
DB_WRITER_POOL_SIZE=3
DB_WRITER_MAX_OVERFLOW=5
STATE_TRACKER_POOL_SIZE=2
STATE_TRACKER_MAX_OVERFLOW=3
ANALYTICS_POOL_SIZE=2
ANALYTICS_MAX_OVERFLOW=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# HTTP Server Configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=8080

# WebSocket Server Configuration
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8765
WEBSOCKET_HEARTBEAT_INTERVAL=30
